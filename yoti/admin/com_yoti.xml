<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="3.0" method="upgrade">
    <name>Yoti</name>
    <author>Yoti Ltd</author>
    <authorEmail>sdksupport@yoti.com</authorEmail>
    <authorUrl>http://www.yoti.com</authorUrl>
    <creationDate>August 2016</creationDate>
    <version>1.0.0</version>
    <license>Link to licence url</license>
    <copyright>Copyright (C) 2016 http://www.yoti.com. All rights reserved.</copyright>
    <description>Let Yoti users quickly register on your site. Note: Need to enable module in module manager</description>
    <scriptfile>process-script.php</scriptfile>
    <install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install-1.0.0.sql</file>
        </sql>
    </install>
    <modules>
        <module folder="modules" module="mod_yoti" name="Yoti"/>
    </modules>
    <files folder="site">
        <filename>yoti.php</filename>
        <filename>controller.php</filename>
        <filename>YotiHelper.php</filename>
        <folder>sdk</folder>
    </files>

    <administration>
        <menu view="yoti">Yoti</menu>
        <files folder="admin">
            <filename>yoti.php</filename>
            <filename>controller.php</filename>
            <filename>access.xml</filename>
            <folder>assets</folder>
            <folder>sql</folder>
            <folder>views</folder>
            <folder>models</folder>
        </files>
    </administration>
</extension>